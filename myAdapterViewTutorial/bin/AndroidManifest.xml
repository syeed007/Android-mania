<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myadapterviewtutorial"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListViewAdapterActivity"
            android:label="@string/title_activity_list_view_adapter"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myadapterviewtutorial.MainActivity" />
        </activity>
        <activity
            android:name=".GalaryActivity"
            android:label="@string/title_activity_galary"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myadapterviewtutorial.MainActivity" />
        </activity>
        <activity
            android:name=".ListViewAdapterListActivity"
            android:label="@string/title_activity_list_view_adapter_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myadapterviewtutorial.MainActivity" />
        </activity>
        <activity
            android:name=".SpinnerAdapterActivity"
            android:label="@string/title_activity_spinner_adapter"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myadapterviewtutorial.MainActivity" />
        </activity>
    </application>

</manifest>
