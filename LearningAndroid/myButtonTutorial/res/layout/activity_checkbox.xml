<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mybuttontutorial.CheckboxActivity" >

    <Button
        android:id="@+id/btn_checklist_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle checklist visibility"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/linear_layout_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/btn_checklist_visibility"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkbox_browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckBoxClick"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:text="Sync Browser"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_calender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckBoxClick"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:text="Sync Calender"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCheckBoxClick"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:text="Sync Contact"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>